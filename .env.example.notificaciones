# Ejemplo de variables de entorno para Notificaciones
# Copia este archivo como .env.local y completa con tus valores

# API Backend
VITE_API_URL=http://localhost:8000/api

# Google Apps Script URL
# Reemplaza con tu URL del Apps Script que maneja la subida a Google Drive
VITE_GOOGLE_APPS_SCRIPT_URL=https://script.google.com/macros/s/YOUR_SCRIPT_ID_HERE/exec

# Configuración opcional de Google Drive
# ID de la carpeta padre donde crear carpetas de notificaciones
VITE_GOOGLE_DRIVE_PARENT_FOLDER_ID=your_folder_id_here

# Configuración de autenticación
VITE_AUTH_API_URL=http://localhost:8000/api/auth

# Configuración de logging
VITE_DEBUG_MODE=false

# Configuración de upload
VITE_MAX_FILE_SIZE=52428800  # 50MB en bytes
VITE_ACCEPTED_FILE_TYPES=image/*,application/pdf
